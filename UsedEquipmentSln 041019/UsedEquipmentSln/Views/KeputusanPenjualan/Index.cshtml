@{
    ViewBag.Title = "Integrated System Used Equipment";
    ViewBag.dashboard = "Keputusan Penjualan";
    ViewBag.dashboardSmall = "";
    Layout = "~/Views/Shared/_LayoutMaster.cshtml";
}
<input type="hidden" id="urlPath" name="urlPath" value="@ViewBag.pathParent" />

<div class="panel panel-flat" style="margin-top:10px">
    <div class="panel-body">
        <div class="form-group">
            <div class="col-md-12">
                <div id="grid"></div>
            </div>
        </div><br />
    </div>
</div>

<div class="col-md-12" id="wnd_keputusan_penjualan" style="display:none">
    <div class="panel panel-info">
        <div class="panel-heading" style="font-size:15px; text-align:left; font-family:Helvetica;">Keputusan Penjualan</div>
        <div class="panel-body clearfix">
            <br>
            <div class="form-group">
                <label class="control-label col-md-12" style="width:150px;"><strong>DETAIL 1</strong></label>
            </div><br>
            <div class="form-group">
                <div id="grid_detail_ur4_detail1"></div>
            </div>
            <div class="col-md-12" style="height:30px;">

            </div>
            <br>
            <div class="form-group">
                <label class="control-label col-md-12" style="width:150px;"><strong>DETAIL 2</strong></label><br><br><br>
                <div class="col-md-12">
                    <input type="text" id="txt_search" style="width: 170px; height:25px; background-color: #ececec" class="form-control" placeholder="Search"  />
                    <button class="btn btn-mdb-color btn-rounded btn-sm my-0 ml-sm-2 waves-effect waves-light" type="button" id="btn_search" onclick="searchData()" style="background:#00bcd4; color:white; margin-top: 5px">Search</button>
                    <br><br>
                </div>
                <br><br>
            </div>
            <div class="form-group">
                <div class="col-md-12">
                    <div id="grid_detail_ur4_detail2"></div>
                </div>
            </div>
            <div class="col-md-12" style="height:30px;">

            </div>
            <br>
            <div class="form-group">
                <label class="control-label col-md-12" style="width:150px;"><strong>DETAIL 3</strong></label>
            </div><br>
            <div class="form-group">
                <div class="col-md-12">
                    <div id="grid_detail_ur4_detail3"></div>
                </div>
            </div>
            <div class="col-md-12" style="height:30px;">

            </div>
            <br>
            <div class="form-group">
                <label class="control-label col-md-12" style="width:150px;"><strong>DETAIL 4</strong></label>
            </div><br>
            <div class="form-group">
                <div class="col-md-12">
                    <div id="grid_detail_ur4_detail4"></div>
                </div>
            </div>
            <div class="col-md-12" style="height:30px;">

            </div>
            <br>
            <div class="form-group">
                <br>
                <label class="control-label col-md-12" style="width:120px;">Weight Table</label>
                <div class="col-md-3">
                    <input type="text" id="txt_browse" style="width: 100%; height:50%; background-color: #ececec" class="form-control" placeholder="Browse" disabled />
                    <button class="btn btn-mdb-color btn-rounded btn-sm my-0 ml-sm-2 waves-effect waves-light" type="button" id="btn_browse" onclick="findData()" style="background:#00bcd4; color:white; margin-top: 5px">Search</button>
                    <br><br><br>
                    <div class="col-md-12" style="height:30px;">

                    </div>  
                    <button id="btn_save" class="btn btn-primary save" onclick="saveDetail()">Save <span class="glyphicon glyphicon-save"></span></button>
                    <button id="btn_cancel" class="btn btn-secondary cancel" onclick="cancelDetail()"><span class="glyphicon glyphicon-remove"></span> Cancel</button>
                </div>
                <div class="col-md-1"></div>
                <label class="control-label col-md-12" style="width:80px;">Decision:</label>
                <div class="col-md-3">
                    <input type="text" id="txt_decision" style="width: 100%; height:50%; background-color: #ececec" class="form-control"  />
                </div>
            </div><br>
        </div>
    </div>
</div>

<div class="col-md-12" id="wnd_type_besi" style="display:none">
    <div id="gridTypeBesi"></div>
</div>

<script type="text/javascript" src="@ViewBag.pathParent/Js/KeputusanPenjualan.js"></script>

