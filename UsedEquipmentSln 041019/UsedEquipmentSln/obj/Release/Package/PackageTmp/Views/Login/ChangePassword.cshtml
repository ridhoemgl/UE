<!DOCTYPE html>
<html lang="en">
@{
    ViewBag.pathParent = Url.Content("~").Substring(0, Url.Content("~").Length - 1);
    Layout = null;
}
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width" />
    <title>Integrated System Used Equipment</title>
    <meta content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0" name="viewport">
    <meta name="viewport" content="width=device-width">

    <!-- Global stylesheets -->
    <link href="~/assets/css/icons/icomoon/styles.css" rel="stylesheet">
    <link href="~/assets/css/bootstrap.css" rel="stylesheet">
    <link href="~/assets/css/core.css" rel="stylesheet">
    <link href="~/assets/css/components.css" rel="stylesheet">
    <link href="~/assets/css/colors.css" rel="stylesheet">
    <!-- /global stylesheets -->
    <!-- Core JS files -->
    <script src="~/assets/jquery-3.2.1.min.js"></script>
    <script type="text/javascript" src="~/assets/js/plugins/loaders/pace.min.js"></script>
    <script type="text/javascript" src="~/assets/js/core/libraries/jquery.min.js"></script>
    <script type="text/javascript" src="~/assets/js/core/libraries/bootstrap.min.js"></script>
    <script type="text/javascript" src="~/assets/js/plugins/loaders/blockui.min.js"></script>
    <!-- /core JS files -->
    <!-- Theme JS files -->
    <script type="text/javascript" src="~/assets/js/plugins/forms/styling/uniform.min.js"></script>
    <script type="text/javascript" src="~/assets/js/core/app.js"></script>
    <script type="text/javascript" src="~/assets/js/pages/form_inputs.js"></script>
</head>
<body>

    @*<h2>Change Password</h2>*@

    <div class="page-container">
        <!-- Page content -->
        <div class="page-content">
            <div class="content-form-login">
                <!-- Form horizontal -->
                <div id="login_form_change_password" class="col-md-4">
                    <div class="panel panel-flat" style="padding:30px">
                        <div class="panel-heading">
                            <center><h3 class="panel-title" style="font-weight:bold">Integrated System Used Equipment</h3></center>
                        </div>
                        <div class="panel-body">
                            <form class="form-horizontal" action="@ViewBag.pathParent/login/changePassword" method="POST" name="fom_login_change_password" id="fom_login_change_password">
                                <fieldset class="content-group">
                                    <div class="form-group">
                                        <div class="col-lg-12">
                                            <div class="text-center">
                                                <img src="@ViewBag.pathParent/ContectLayout/img/user.png" alt="user" style="width:25%;height:25%">
                                            </div>
                                            <br />
                                            <br />
                                            <div class="row">
                                                <div class="col-md-12">
                                                    <div class="form-group has-feedback has-feedback-left">
                                                        <input type="text" id="txt_nrp_change_password" class="form-control" name="NRP" value="@Session["empId"]" disabled>
                                                  
                                                        <div class="form-control-feedback">
                                                            <i class="icon-user"></i>
                                                        </div>

                                                    </div>
                                                    <div class="form-group has-feedback has-feedback-left">
                                                        <input type="text" class="form-control" name="NRP" id="txt_change_password" placeholder="Create new password">

                                                        <div class="form-control-feedback">
                                                            <i class="glyphicon glyphicon-lock"></i>
                                                        </div>
                                                    </div>
                                                        @*<div class="form-group">
                @Html.DropDownList("idProfile", (IEnumerable<SelectListItem>)ViewBag.Profile, "[Select]", new { onchange = "profileChange(this)", @class = "form-control custom-select", @style = "color:#4b4c4d" })
            </div>*@
                                                        @*<div class="form-group">
                <select class="form-control custom-select" id="idDistrik" name="idDistrik" onchange="distrkChange(this)"></select>
            </div>*@
                                                    </div>
                                            </div>
                                        </div>
                                    </div>
                                </fieldset>
                                <div class="text-center">
                                    <button type="submit" class="btn btn-primary" onclick="savePassword()">Save </button>
                                    <button type="submit" class="btn btn-primary" onclick="gotoBack()">Cancel </button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>

                <!-- /form horizontal -->
                <!-- Footer -->
                <div class="footer text-muted">
                    &copy; 2019. <a href="#">Integrated System Used Equipment Dashboard Dashboard</a> by <a href="#" target="_blank">Pamapersada Nusantara</a>
                </div>
                <!-- /footer -->
            </div>
        </div>
    </div>


</body>
</html>

<script>
    function savePassword() {

        var newPassword = $("#txt_change_password").val();
        var nrp = $("#txt_nrp_change_password").val();

        if (newPassword == "") {
            alert("Please fill new password");
        } else {
            $.ajax({
                type: "POST",
                url: "../Home/changePassword?s_password=" + newPassword + "&s_nrp=" + nrp,
                contentType: "application/json; charset=utf-8",
                dataType: "json",
                cache: false,
                success: function (data) {
                    //window.location.href = $("#urlPath").val() + "/Home"
                    window.location.href = "http://localhost:61751/Home"
                }
            });
        }
    }

    function gotoBack() {
        //window.location = "@ViewBag.pathParent/61751/Home";
        window.location = $("#urlPath").val() + "/Home";
    }
</script>


